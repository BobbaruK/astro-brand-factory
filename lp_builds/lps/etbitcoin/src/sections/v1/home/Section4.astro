      fi: "",
      pl: ``,
      hu: "",
      th: "",
      ms: "",
      vi: "",
    },
    content: {
      en: "",
      it: "Accesso alle ultime notizie di mercato, informazioni educative e molto altro",
      tr: "",
      ro: "",
      ar: "",
      de: "",
      es: "",
      sv: "Tillgång till de senaste marknadsnyheterna, utbildningsinformation och mycket mer.",
      pt: "",
      fi: "",
      pl: ``,
      hu: "",
      th: "",
      ms: "",
      vi: "",
    },
    value: "title2",
  },
  {
    title: {
      en: "",
      it: "Cosa abbiamo da offrire?",
      tr: "",
      ro: "",
      ar: "",
      de: "",
      es: "",
      sv: "Vad har ni att erbjuda?",
      pt: "",
      fi: "",
      pl: ``,
      hu: "",
      th: "",
      ms: "",
      vi: "",
