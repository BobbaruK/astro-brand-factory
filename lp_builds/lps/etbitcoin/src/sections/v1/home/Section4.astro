---

<section
  id="section4"
  class="relative overflow-hidden bg-[#dbdbdb] py-5 md:py-6 lg:py-8 xl:py-9 2xl:py-20"
>
  <Image
    src={texture}
    alt="Background"
    class="absolute left-0 top-0 z-0 h-full w-10 object-cover object-right lg:w-20 xl:w-[180px]"
    widths={[180, texture.width]}
    sizes={`
      (max-width: 1280px) 180px,
      ${texture.width}px
    `}
  />
  <Image
    src={texture}
    alt="Background"
    class="absolute right-0 top-0 z-0 h-full w-10 -scale-x-100 object-cover object-right lg:w-20 xl:w-[180px]"
    widths={[180, texture.width]}
    sizes={`
      (max-width: 1280px) 180px,
      ${texture.width}px
    `}
  />
  <div class="container relative z-10 flex flex-col gap-6 lg:text-center">
    <h2 set:html={title[componentProps.lang]} class="text-heading2 font-bold" />
    <AccordionWrapper
      items={accordionItems}
      componentsProps={componentProps}
      client:load
    />
  </div>
</section>
