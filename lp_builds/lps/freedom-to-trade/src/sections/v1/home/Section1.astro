<section class="py-4 md:py-9 lg:py-10 xl:py-12">
  <div
    class="container flex max-w-[850px] flex-col items-center justify-center gap-4 md:gap-10"
  >
    <h2
      class="max-w-[30ch] text-center text-v1-heading2 font-bold leading-tight"
      set:html={title[componentProps.lang]}
    />
    <div
      class="counter flex w-full grow flex-col gap-4 md:grid md:grid-cols-2 md:gap-6"
    >
      {
        bullets.map((bullet, index) => (
          <Card
            className={cn(
              `flex flex-col gap-4 overflow-hidden rounded-md border-2 border-black p-4`,
              bullets.length - 1 === index ? "col-span-2" : "",
            )}
          >
            <div
              class={cn(
                `flex flex-row items-center justify-between gap-4 md:gap-8`,
                bullets.length - 1 === index && "md:flex-col-reverse",
              )}
            >
              <h3
                class="text-[16px] font-bold"
                set:html={bullet.title[componentProps.lang]}
              />
              <div class="text-8xl text-primary">
                <SVGMask url={bullet.icon} />
              </div>
            </div>
            <p>{bullet.para[componentProps.lang]}</p>
          </Card>
        ))
      }
    </div>
  </div>
</section>

<style lang="scss">
  .counter {
    counter-reset: bullet;
    h3 {
      &::before {
        counter-increment: bullet;
        content: counter(bullet) ". ";
      }
    }
  }
</style>
