---
import type { ComponentProps } from "../../../../../../globals/types/ComponentProps";
import type { TranslationsType } from "../../../../../../globals/types/Translations";

interface Props {
  componentProps: ComponentProps;
}
const { componentProps } = Astro.props;

const title: TranslationsType = {
  en: "World Renowned Multi-Asset-Class Trading Platform",
  it: "",
  tr: "",
  ro: "",
  ar: "",
  de: "",
  es: "",
  sv: ``,
  pt: "",
  fi: "",
  pl: ``,
  hu: "",
  th: "",
  ms: "",
  vi: "",
};
---

<section class="border-t border-gray-200">
  <div class="scssecoBorderHeading container relative py-3">
    <h1
      class="text-center text-heading1"
      set:html={title[componentProps.lang]}
    />
  </div>
</section>

<style lang="scss">
  .scssecoBorderHeading {
    &::after {
      background: linear-gradient(
        90deg,
        hsla(0, 0%, 89%, 0) 0,
        #e4e4e4 10%,
        #e4e4e4 90%,
        hsla(0, 0%, 89%, 0)
      );
      bottom: 0;
      content: "";
      height: 1px;
      left: 0;
      position: absolute;
      right: 0;
      width: 100%;
    }
  }
</style>
