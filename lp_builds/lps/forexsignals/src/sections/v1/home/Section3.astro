---
import { Card, CardContent } from "@/components/ui/card";
import { Image } from "astro:assets";
import type { ComponentProps } from "../../../../../../globals/types/ComponentProps";
import type { TranslationsType } from "../../../../../../globals/types/Translations";
import mobileTraderImage from "../../../assets/imgs/v1/mobiletrader.jpg";
import mt4Image from "../../../assets/imgs/v1/mt4.jpg";
import tradingCopyKatImage from "../../../assets/imgs/v1/tradingcopycat.jpg";
import webTraderImage from "../../../assets/imgs/v1/webtrader.jpg";

interface Props {
  componentProps: ComponentProps;
}
const { componentProps } = Astro.props;

const monitorScreeIcon = `<svg width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M21 16H3V4h18m0-2H3c-1.11 0-2 .89-2 2v12a2 2 0 0 0 2 2h7v2H8v2h8v-2h-2v-2h7a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2Z"></path></svg>`;
const globeIcon = `<svg width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M17.9 17.39c-.26-.8-1.01-1.39-1.9-1.39h-1v-3a1 1 0 0 0-1-1H8v-2h2a1 1 0 0 0 1-1V7h2a2 2 0 0 0 2-2v-.41a7.984 7.984 0 0 1 2.9 12.8M11 19.93c-3.95-.49-7-3.85-7-7.93c0-.62.08-1.22.21-1.79L9 15v1a2 2 0 0 0 2 2m1-16A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10A10 10 0 0 0 12 2Z"></path></svg>`;
const phoneIcon = `<svg width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M16 1H8C6.34 1 5 2.34 5 4v16c0 1.66 1.34 3 3 3h8c1.66 0 3-1.34 3-3V4c0-1.66-1.34-3-3-3zm-2 20h-4v-1h4v1zm3.25-3H6.75V4h10.5v14z"></path></svg>`;

const cards: {
  image: ImageMetadata;
  icon: string;
  title: TranslationsType;
}[] = [
  {
    image: mt4Image,
    icon: monitorScreeIcon,
    title: {
      en: `MetaTrader 4`,
      it: ``,
      tr: ``,
      ro: ``,
      ar: ``,
      de: ``,
      es: ``,
      sv: ``,
      pt: ``,
      fi: ``,
      pl: ``,
      hu: ``,
      th: ``,
      ms: ``,
      vi: ``,
    },
  },
  {
    image: mobileTraderImage,
    icon: globeIcon,
    title: {
      en: `Mobile Trader`,
      it: ``,
      tr: ``,
      ro: ``,
      ar: ``,
      de: ``,
      es: ``,
      sv: ``,
      pt: ``,
      fi: ``,
      pl: ``,
      hu: ``,
      th: ``,
      ms: ``,
      vi: ``,
    },
  },
  {
    image: tradingCopyKatImage,
    icon: phoneIcon,
    title: {
      en: `Trading CopyKat`,
      it: ``,
      tr: ``,
      ro: ``,
      ar: ``,
      de: ``,
      es: ``,
      sv: ``,
      pt: ``,
      fi: ``,
      pl: ``,
      hu: ``,
      th: ``,
      ms: ``,
      vi: ``,
    },
  },
  {
    image: webTraderImage,
    icon: monitorScreeIcon,
    title: {
      en: `Web Trader`,
      it: ``,
      tr: ``,
      ro: ``,
      ar: ``,
      de: ``,
      es: ``,
      sv: ``,
      pt: ``,
      fi: ``,
      pl: ``,
      hu: ``,
      th: ``,
      ms: ``,
      vi: ``,
    },
  },
];
---

<section
  class="border-t border-gray-200 bg-[url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAAECAIAAAAmkwkpAAAAKElEQVQY0zXBsQ0AIAgAMP4/VQOE8oCTbbC+QGZVNxuo7nPujAA7Aw+W0y0n3/WeTAAAAABJRU5ErkJggg==)] py-9"
>
  <div class="container flex flex-wrap justify-around gap-20">
    {
      cards.map((card) => (
        <Card className="overflow-hidden">
          <Image
            src={card.image}
            alt="Graph presentation"
            class=""
            widths={[320, card.image.width]}
            sizes={`320px`}
          />
          <CardContent className="px-4 py-6 flex gap-4 justify-start items-center">
            <Fragment set:html={card.icon} />
            <p set:html={card.title[componentProps.lang]} />
          </CardContent>
        </Card>
      ))
    }
  </div>
</section>
