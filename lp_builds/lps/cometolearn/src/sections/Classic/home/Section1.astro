---
import { Image } from "astro:assets";
import useFxoroBrandOutput from "../../../../../../globals/composables/useFxoroBrandOutput";
import type { ComponentProps } from "../../../../../../globals/types/ComponentProps";
import type { TranslationsType } from "../../../../../../globals/types/Translations";

import section1BG from "../../../assets/imgs/Classic/section1-background.png";
import icon1 from "../../../assets/imgs/Classic/icon1.png";
import icon2 from "../../../assets/imgs/Classic/icon2.png";
import icon3 from "../../../assets/imgs/Classic/icon3.png";

interface Props {
  componentProps: ComponentProps;
}
const { componentProps } = Astro.props;

const para: TranslationsType = {
  en: "",
  it: "",
  tr: "",
  ro:
    componentProps.langType === "fsa"
      ? `${componentProps.brandObj.name} iţi oferă şansa de a învăţa să tranzacţionezi şi să exersezi pe
un cont DEMO cu €10.000 cu risc 0.`
      : ``,
  ar: "",
  de: "",
  es: "",
  sv: "",
  pt: "",
  fi: "",
  pl: ``,
  hu: "",
  th: "",
  ms: "",
  vi: "",
};

const title: TranslationsType = {
  en: "",
  it: "",
  tr: "",
  ro:
    componentProps.langType === "fsa"
      ? `Învaţă să tranzacţionezi în 3 paşi:`
      : ``,
  ar: "",
  de: "",
  es: "",
  sv: "",
  pt: "",
  fi: "",
  pl: `Zainteresowany zarabianiem poprzez inwestycje? sprawdź co oferuje ${useFxoroBrandOutput(componentProps.brandObj.name)}:`,
  hu: "",
  th: "",
  ms: "",
  vi: "",
};

interface Bullet {
  title: TranslationsType;
  image: ImageMetadata;
}

const bullets: Bullet[] = [
  {
    title: {
      en: "",
      it: "",
      tr: "",
      ro:
        componentProps.langType === "fsa" ? `Primeşte GRATUIT GHIDUL PDF` : "",
      ar: "",
      de: "",
      es: "",
      sv: "",
      pt: "",
      fi: "",
      pl: `Materiały szkoleniowe`,
      hu: "",
      th: "",
      ms: "",
      vi: "",
    },
    image: icon1,
  },
  {
    title: {
      en: "",
      it: "",
      tr: "",
      ro:
        componentProps.langType === "fsa"
          ? `Înscrie-te pentru un training 1 la 1 gratuit cu un reprezentant ${componentProps.brandObj.name}.`
          : "",
      ar: "",
      de: "",
      es: "",
      sv: "",
      pt: "",
      fi: "",
      pl: `Sesje szkoleniowe`,
      hu: "",
      th: "",
      ms: "",
      vi: "",
    },
    image: icon2,
  },
  {
    title: {
      en: "",
      it: "",
      tr: "",
      ro:
        componentProps.langType === "fsa"
          ? `Testează-ţi cunoştinţele pe un cont DEMO GRATUIT.`
          : ``,
      ar: "",
      de: "",
      es: "",
      sv: "",
      pt: "",
      fi: "",
      pl: `Przetestuj swoje umiejętności z nami podczas okresu próbnego`,
      hu: "",
      th: "",
      ms: "",
      vi: "",
    },
    image: icon3,
  },
];
---

<section
  id="section1"
  class="section1 lg:pb-26 relative mb-8 py-4 sm:pb-16 sm:pt-8 md:pb-28 lg:pt-12 xl:pt-20"
>
  <Image
    src={section1BG}
    alt="Background"
    class="absolute left-0 top-0 z-0 hidden h-full w-full sm:block"
    widths={[320, 576, 640, 768, 1024, 1280, 1536, section1BG.width]}
    sizes={"100vw"}
  />
  <div class="relative z-10">
    <div
      class="container grid place-items-center gap-5 pb-4 sm:pb-8 lg:gap-9 lg:pb-12"
    >
      {
        para[componentProps.lang] && (
          <p
            class="max-w-[60ch] text-center text-[22px] sm:text-[25px]"
            set:html={para[componentProps.lang]}
          />
        )
      }
      <h2
        set:html={title[componentProps.lang]}
        class="max-w-[50ch] text-center text-3xl font-bold uppercase text-primary"
      />
    </div>
    <div class="container flex flex-col gap-8 md:flex-row">
      {
        bullets.map((bullet) => (
          <div class="flex flex-col items-center justify-start gap-4 md:basis-1/3">
            <Image
              src={bullet.image}
              alt="Background"
              class=""
              widths={[102, bullet.image.width]}
              sizes={"102px"}
            />
            <h3
              set:html={bullet.title[componentProps.lang]}
              class="max-w-[26ch] text-center"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
