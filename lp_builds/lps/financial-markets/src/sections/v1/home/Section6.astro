---
import type { ComponentProps } from "../../../../../../globals/types/ComponentProps.ts";
import type { TranslationsType } from "../../../../../../globals/types/Translations.ts";
import ButtonDisclaimer from "../../../components/ButtonDisclaimer.astro";

interface Props {
  componentProps: ComponentProps;
}
const { componentProps } = Astro.props;

const button: TranslationsType = {
  en: `Open an account now`,
  it: ``,
  tr: ``,
  ro: ``,
  ar: ``,
  de: ``,
  es: ``,
  sv: ``,
  pt: ``,
  fi: ``,
  pl: `Zasubskrybuj`,
  hu: ``,
  th: ``,
  ms: ``,
  vi: ``,
};
---

<section class="py-4 sm:py-8 md:py-9 lg:py-10 xl:py-12 2xl:py-14">
  <div class="container">
    <ButtonDisclaimer
      buttonLabel={button[componentProps.lang]}
      lang={componentProps.lang}
      whatsapp={componentProps.brandObj.whatsapp}
    />
  </div>
</section>
